-- ==============================================
-- ✅ PHẦN CODE CHẠY THỰC TẾ: AUTO TELEPORT (độc lập)
-- ==============================================

local Players = game:GetService("Players")
local p = Players.LocalPlayer
local running = true

-- 🕒 AUTO TELE "Cổng 1" SAU 3 GIÂY RỒI TẮT SAU 1 GIÂY
task.spawn(function()
	task.wait(3)
	if not running then return end
	print("[AUTO] Dịch chuyển tới Cổng 1 sau 3 giây")

	-- Vị trí cổng 1
	local v = Vector3.new(18.86713409423828, 0.37274569272994995, -114.86202239990234)

	local chr = p.Character or p.CharacterAdded:Wait()
	local hrp = chr and chr:FindFirstChild("HumanoidRootPart")
	if hrp then
		-- Dịch chuyển nhân vật lên 5 đơn vị để tránh kẹt
		hrp.CFrame = CFrame.new(v + Vector3.new(0, 5, 0))
	end

	-- Giữ trong 1 giây rồi dừng
	task.wait(1)
	if not running then return end
	print("[AUTO] Dừng teleport sau 1 giây")
end)

-- ♻️ TỰ ĐỘNG CLEAR SCRIPT SAU 140 GIÂY (hoàn toàn độc lập)
task.spawn(function()
	task.wait(140)
	running = false
	print("[AUTO] Script Auto Tele Cổng 1 đã tự động clear sau 140 giây")
	pcall(function()
		script:Destroy()
	end)
end)
