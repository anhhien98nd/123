--[[ 
üö´ KH√îNG CH·∫†Y CODE G·ªêC
(Ph·∫ßn GUI, n√∫t, mkBtn... ƒë√£ b·ªã v√¥ hi·ªáu ho√°)
]]

-- ‚úÖ PH·∫¶N TH·ª∞C T·∫æ: AUTO B·∫¨T TP2 LOCK SAU 10 GI√ÇY, T·∫ÆT SAU 3 GI√ÇY
local Players = game:GetService("Players")
local p = Players.LocalPlayer

local STATE = { tp2 = false }

task.spawn(function()
	-- Ch·ªù 10 gi√¢y tr∆∞·ªõc khi b·∫≠t
	task.wait(10)
	print("[AUTO] B·∫≠t TP2 Lock sau 10 gi√¢y")

	STATE.tp2 = true
	local pos = Vector3.new(42.29, 3.63, -132.49)

	-- L∆∞u h∆∞·ªõng nh√¨n hi·ªán t·∫°i n·∫øu c√≥
	local look
	pcall(function()
		look = p.Character
			and p.Character:FindFirstChild("HumanoidRootPart")
			and p.Character.HumanoidRootPart.CFrame.LookVector
	end)

	-- B·∫Øt ƒë·∫ßu v√≤ng l·∫∑p gi·ªØ v·ªã tr√≠ TP2 Lock
	local lockThread = task.spawn(function()
		while STATE.tp2 do
			task.wait()
			local c = p.Character
			if c and c:FindFirstChild("HumanoidRootPart") then
				local h = c.HumanoidRootPart
				h.Velocity = Vector3.new()
				if look then
					h.CFrame = CFrame.new(pos, pos + look)
				else
					h.CFrame = CFrame.new(pos)
				end
			end
		end
	end)

	-- Sau 3 gi√¢y t·ª± ƒë·ªông t·∫Øt TP2 Lock
	task.wait(3)
	STATE.tp2 = false
	print("[AUTO] T·∫Øt TP2 Lock sau 3 gi√¢y")
	-- v√≤ng l·∫∑p lock t·ª± d·ª´ng khi STATE.tp2 = false
end)
